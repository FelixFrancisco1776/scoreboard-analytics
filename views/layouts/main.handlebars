<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scoreboard Analytics</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/stadiums.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="p-3 bg-color-light">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
              <use xlink:href="#bootstrap"></use>
            </svg>
          </a>
          <div class='nav-brand'>
            <a href='/'>
              <img src='/images/logo-cool.png' class='logo' alt='logo'>
            </a>
          </div>

          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            {{!-- <li><a href="/" class="nav-link px-2 text-white fs-1 text">Scoreboard Analytics</a></li> --}}

          </ul>

          {{#if logged_in}}
          <div class="text-end">
            <a href="/profile" type="button" id="profile" class="btn btn-outline-light me-2">Create</a>
            <a href="/all-posts" type="button" id="all-posts" class="btn btn-outline-light me-2">Rosters</a>
            <a href="#" type="button" id="logout" class="btn btn-outline-light me-2">Logout</a>
          </div>
          {{else}}
          <div class="text-end">
            <a href="/login" type="button" class="btn btn-outline-light me-2">Login</a>
            <a href="/signup" type="button" class="btn btn-outline-light me-2">Sign-up</a>
          </div>
          {{/if}}
        </div>
      </div>
    </header>

    {{!-- <main class="container container-fluid mt-5"> --}}
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>

    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>