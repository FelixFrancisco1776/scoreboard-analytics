<div class="row d-flex justify-content-center mt-4">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4 d-flex justify-content-center">
  <div class="col-md-6">
    <h3>Create a New Selection:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="teamName">Select Team:</label>
        <input class="form-input" type="text" id="teamName" name="teamName" />
      </div>
      <div class="form-group">
        <label for="playerName">Player Name:</label>
        <textarea class="form-input" id="playerName" name="playerName"></textarea>
      </div>
      <div class="form-group">
        <label for="pitcherName">Pitcher Name:</label>
        <textarea class="form-input" id="pitcherName" name="pitcherName"></textarea>
      </div>
      <div class="form-group">
        <label for="winLose">Win or Lose:</label>
        <textarea class="form-input" id="winLose" name="winLose"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
